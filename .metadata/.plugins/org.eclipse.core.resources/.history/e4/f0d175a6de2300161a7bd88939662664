#include "frametoolbar.h"

frametoolbar::frametoolbar()
	:m_toolbar(NULL)
{

}
frametoolbar::~frametoolbar()
{

}

bool frametoolbar::Create(Evas_Object* framewnd, Evas_Object* conformant)
{
	Evas_Object* toolbar = elm_toolbar_add(framewnd);
	evas_object_show(toolbar);
	elm_toolbar_select_mode_set(toolbar, ELM_OBJECT_SELECT_MODE_NONE);
	elm_toolbar_transverse_expanded_set(toolbar, EINA_TRUE);

	m_btn[FRMAE_TOOLBAR_LEFT_BTN] = elm_toolbar_item_append(toolbar, NULL, "Left", on_btn1_cb, this);
	m_btn[FRMAE_TOOLBAR_CENTER_BTN] = elm_toolbar_item_append(toolbar, NULL, "Center", on_btn2_cb, this);
	m_btn[FRMAE_TOOLBAR_RIGHT_BTN] = elm_toolbar_item_append(toolbar, NULL, "Right", on_btn3_cb, this);

	return toolbar;

	return true;
}


