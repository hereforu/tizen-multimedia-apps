#ifndef BASE_H_
#define BASE_H_

#include "multimediaapp.h"

template<typename TClass>
class ObjectFactory
{
public:
	static TClass* CreateInstance()
	{
		TClass* pobject = new TClass;
		return pobject;
	}
};


#define MOVE_NEXTVIEW MultimediaApp::GetInstance()->MoveNextView()
#define MOVE_PREVVIEW MultimediaApp::GetInstance()->MovePrevView()

void baseassert(bool condition);


#endif /* BASE_H_ */
